<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.stepstestsapp.viewmodel.CommentsViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.IdRangeFragment">

        <TextView
            android:id="@+id/title"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:text="@string/welcome_message"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/min_id_title"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/min_id"
            app:layout_constraintBottom_toTopOf="@+id/load_ids"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@id/title"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <TextView
            android:id="@+id/max_id_title"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/max_id"

            app:layout_constraintBottom_toTopOf="@+id/load_ids"
            app:layout_constraintRight_toRightOf="@id/title"
            app:layout_constraintTop_toBottomOf="@+id/title" />


        <EditText
            android:id="@+id/min_id_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:focusable="true"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="3"
            android:nextFocusRight="@id/max_id_et"
            android:text="@={viewModel.minId}"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@+id/min_id_title"
            app:layout_constraintStart_toStartOf="@+id/min_id_title"
            app:layout_constraintTop_toBottomOf="@id/min_id_title"
            tools:layout_editor_absoluteY="238dp" />


        <EditText
            android:id="@+id/max_id_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:focusable="true"
            android:maxLength="3"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:text="@={viewModel.maxId}"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@+id/max_id_title"
            app:layout_constraintStart_toStartOf="@+id/max_id_title"
            app:layout_constraintTop_toBottomOf="@id/max_id_title"
            tools:layout_editor_absoluteY="238dp" />

        <Button
            android:id="@+id/load_ids"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/load_comments"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/title"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintVertical_bias="0.858" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>